@model HELMo_bilite.Controllers.ViewModels.EditDriverLisencesVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricule" class="control-label"></label>
                <input asp-for="Matricule" class="form-control" />
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
            <div class="form mb-3">
                <div class="form-control">
                    <label>Selectionner vos lisences</label><br />
                    <select class="selectpicker" asp-for="IdsLicensesSelect" id="selecteLicenseRegister" multiple asp-items="Model.Licenses"></select>

                </div>
            </div> 

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
