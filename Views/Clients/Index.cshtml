@model IEnumerable<HELMo_bilite.Controllers.ViewModels.ClientVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="d-flex flex-column justify-content-center" width="80%">
    <h1 class="text-center">Liste des Client</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Nom de la société
                </th>
                <th scope="col">
                    Adresse de la société
                </th>
                <th scope="col">
                    Numero de contact
                </th>
                <th scope="col">
                    Email de contact
                </th>
                <th scope="col">
                    Etats
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.PictureSrc" class="border rounded-circle img-profile" width="32" height="32" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @if(!item.HasDelivery)
                        {
                            <span class="badge badge-pill badge-warning">
                                Pas de livraison
                            </span>
                        }
                        @if (item.IsBadPayer)
                        {
                            <span class="badge badge-pill badge-danger">
                                Mauvais payeur
                            </span>
                        }
                    </td>
                    <td>
                        <a class="p-2" asp-action="Edit" asp-route-id="@item.Id"><span class="material-icons icon-color-black">&#xe869;</span></a>
                        <a class="p-2" asp-action="Delete" asp-route-id="@item.Id"><span class="material-icons icon-color-black">&#xe872;</span></a>
                        @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
