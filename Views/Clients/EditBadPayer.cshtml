@model HELMo_bilite.Controllers.ViewModels.ClientVM;
@{
    ViewData["Title"] = "EditBadPayer";
}

<div class="d-flex flex-row justify-content-center">

    <div>
        <h1>Signalement de client</h1>
        <hr />
        <h3>Client</h3>
        <h5>Companie du client :@Model.CompanyName</h5>

        @if (Model.IsBadPayer)
        {
            <p>Voulez-vous enlever le signalement de mauvais payer de ce client ?</p>
        }
        else
        {
            <p>Voulez-vous signaler ce client en tant que mauvais payeur ?</p>
        }


        <form asp-action="EditBadPayer">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Oui" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-danger">Non</a>
        </form>
    </div>


</div>