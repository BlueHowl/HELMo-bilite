@model HELMo_bilite.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}


<div class="d-flex justify-content-center">
    <a asp-action="Index"><span class="material-icons icon-color-black">&#xe5c4;</span></a>
    <div>

        <div class="d-flex">
            <h4 class="mr-auto p-2">Vehicle</h4>
            <a class="p-2" asp-action="Edit" asp-route-id="@Model?.VIN"><span class="material-icons icon-color-black">&#xe869;</span></a>
            <a class="p-2" asp-action="Delete" asp-route-id="@Model?.VIN"><span class="material-icons icon-color-black">&#xe872;</span></a>

        </div>

        <hr />
        <div class="d-flex justify-content-around">
            <dl class="row p-2">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VIN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VIN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.License)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.License.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Payload)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Payload)
                </dd>
            </dl>
            <div class="p-2 align-middle">
                @{
                    var imageSrc = "/images/";
                    
                    if (Model.Picture != null)
                        imageSrc += "vehicules/" + Model.Picture;
                    else
                        imageSrc += "defaultTucksPicture.png";
                }
                <img src="@imageSrc" width="auto" height="200" />

               
            </div>
        </div>

    </div>
</div>
<div>
</div>
