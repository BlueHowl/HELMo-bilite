@model IEnumerable<HELMo_bilite.Controllers.ViewModels.HelmoMemberVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des menbres helmo</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @if(item.Role == "driver")
                    {
                        <a asp-controller="Deliveries" asp-action="Edit" asp-route-id="@item.Matricule">Modifier les permits</a>
                    }
                    
                    
                </td>
            </tr>
        }
    </tbody>
</table>
